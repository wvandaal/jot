<form id="jot-form">
  <input type="text" name="entry[title]" id="jot-title" placeholder="Title" required>
  <input type="text" name="entry[description]" id="jot-description" placeholder="Optional description">
  <textarea name="entry[content]" id="jot-content" placeholder="Enter your markdown here" required></textarea>
  <div id="markdown-output">
    <div id="placeholder">markdown preview</div>
  </div>
  <div class="button-group">
    <button type="button" class="save"><i class="icon-floppy"></i>save</button>
    <button type="button"><i class="icon-down-circled"></i>download</button>
    <button type="reset"><i class="icon-trash"></i>clear</button>
    <button type="button" class="resize-large"><i class="icon-resize-full"></i></button>
  </div>
</form>

